<!doctype html>
<html data-theme="{{ theme_mode }}">
  <title>ʻāwīwī – {% block page_title %}{{ title|striptags }}{% endblock %}</title>
  <head>
    <script src="/static/js/common.js"></script>
    <link rel="stylesheet" href="/static/css/common.css" />
    <link id="{id}" rel="stylesheet" href="/static/css/solarized.css" />
  </head>

  <body>

    <div class="top-bar">

      <label class="switch">
        <input type="checkbox" id="mode-switcher-input" {{ 'checked="true"' if theme_mode == "dark" else '' }} onclick="themeChanger()" />
        <div class="slider round"></div>
      </label>

      <div class="single-search-box">
        <form class="single-search-box" action="/search/content" method="post">
          <input type="text" id="search-content" class="search-box" value="" placeholder="search…" name="search-content" />
          <label class="search-box" for="search-content"></label>
          <div class="single-search-box-modal"></div>
        </form>
      </div>

      <header>
        <h1>
          {% block title %}{{ title }}{% endblock %}
        </h1>
      </header>
    </div>

    <div class="container">

      <div class="aside">

        <div class="breadcrumbs">
          <a class="breadcrumbs-link" href="/">ʻāwīwī</a>
          {% for crumb in breadcrumbs %}
            &gt; <a class="breadcrumbs-link" href="{{ crumb.target }}">{{ crumb.name }}</a>
          {% endfor %}
        </div>

        {% block aside %}{% endblock %}

      </div>

      <div class="article">

        {% block content %}
        {{ content }}
        {% endblock %}

        {% block footer %}{% endblock %}
      </div>
    </div>

  </body>

</html>

